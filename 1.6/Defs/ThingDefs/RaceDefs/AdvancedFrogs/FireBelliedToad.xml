			<AridShrubland>0.06</AridShrubland>
			<Desert>0.12</Desert>
			<ExtremeDesert>0.8</ExtremeDesert>
	  </wildBiomes>	
      <deathAction>
        <workerClass>DeathActionWorker_SmallExplosion</workerClass>
      </deathAction>
      <body>QuadrupedAnimalWithPaws</body>
      <nameGenerator>FrogNamerMale</nameGenerator>
      <nameGeneratorFemale>FrogNamerFemale</nameGeneratorFemale>
      <baseBodySize>0.15</baseBodySize>
      <baseHealthScale>0.17</baseHealthScale>
      <baseHungerRate>0.15</baseHungerRate>
      <foodType>OmnivoreRoughAnimal</foodType>
      <leatherDef>Leather_Frog</leatherDef>
      <trainability>Intermediate</trainability>
      <useMeatFrom>Toad</useMeatFrom>
      <petness>0.4</petness> 
      <gestationPeriodDays>5</gestationPeriodDays>
      <soundEating>Reptile_Eat</soundEating>
      <lifeExpectancy>16</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
