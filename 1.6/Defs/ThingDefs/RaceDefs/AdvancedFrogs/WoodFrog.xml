	  <MeatAmount>0</MeatAmount>
	  <LeatherAmount>25</LeatherAmount>
    </statBases>
    <uiIconScale>1.25</uiIconScale>
	<comps>
	<li Class="VEF.AnimalBehaviours.CompProperties_AnimalProduct">
		<resourceDef>WoodLog</resourceDef>
		<gatheringIntervalDays>12</gatheringIntervalDays>
		<resourceAmount>10</resourceAmount>
		<customResourceString>woodGrowth</customResourceString>
	</li>
	<li Class="VEF.AnimalBehaviours.CompProperties_DieAndChangeIntoOtherDef">
		<needsDiggableTerrain>true</needsDiggableTerrain>
		<gizmoImage>Things/Plant/TreeOak/TreeOakA</gizmoImage>
		<gizmoLabel>ST_WoodFrog_CommandLabel</gizmoLabel>
		<gizmoDesc>ST_WoodFrog_CommandDesc</gizmoDesc>
		<defToChangeTo>Plant_TreeOak</defToChangeTo>
	</li>
	</comps>
    <tools>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>3</power>
        <cooldownTime>2.2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
	  <wildBiomes>
			<BorealForest>0.01</BorealForest>
			<Tundra>0.01</Tundra>
			<ColdBog>0.1</ColdBog>
			<TemperateSwamp>0.2</TemperateSwamp>
			<TropicalSwamp>0.2</TropicalSwamp>
			<TemperateForest>0.1</TemperateForest>
			<TropicalRainforest>0.08</TropicalRainforest>
			<AridShrubland>0.01</AridShrubland>
	  </wildBiomes>
      <body>QuadrupedAnimalWithPaws</body>
      <nameGenerator>FrogNamerMale</nameGenerator>
      <nameGeneratorFemale>FrogNamerFemale</nameGeneratorFemale>
      <baseBodySize>0.2</baseBodySize>
      <baseHealthScale>0.35</baseHealthScale>
      <baseHungerRate>0.35</baseHungerRate>
      <foodType>OmnivoreRoughAnimal</foodType>
      <leatherDef>WoodLog</leatherDef>
      <trainability>None</trainability>
      <useMeatFrom>Toad</useMeatFrom>
      <petness>0.1</petness>
      <waterSeeker>true</waterSeeker>
      <waterCellCost>1</waterCellCost>	 
      <gestationPeriodDays>10</gestationPeriodDays>
      <soundEating>Reptile_Eat</soundEating>
      <lifeExpectancy>5</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.09</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.25</minAge>
          <soundWounded>Pawn_Frog_Wounded</soundWounded>
          <soundDeath>Pawn_Frog_Death</soundDeath>
          <soundCall>Pawn_Frog_Call</soundCall>
          <soundAngry>Frog_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
